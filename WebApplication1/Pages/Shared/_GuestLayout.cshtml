<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LangApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm position-fixed w-100 navbar-toggleable-sm navbar-light border-bottom border-white box-shadow mb-3" style="background-color: moccasin;z-index:1;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Welcome"><img src="Images/logo.png" style="height:100px;"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="display:block;">
                        <li class="nav-item">
                            <a class="nav-link text-dark lead" asp-area="" asp-page="/registerpage" style="float:right;overflow:hidden;margin-left:5px;">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark lead" asp-area="" asp-page="/loginpage" style="float:right;overflow:hidden;">Login</a>
                        </li>
                    </ul>
                </div>
        </nav>
    </header>
    <div class="padding"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer position-static bottom-0 border-top border-dark">
        <div class="container">
            2024 - LangApp<br />
            Autorstwa: Dawid Bazylewicz, Sara Fijołek, Miron Kwiatkowski
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>