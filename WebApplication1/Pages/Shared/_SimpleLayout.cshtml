<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LangApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LangApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a class="nav-link" asp-area="" asp-page="/Welcome" style="display:block;text-align:center;min-height:100px;width:100px;margin-left:46%"><img src="Images/logo.png" style="height:100px;"></a>
    </header>
    <div class="padding"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer position-fixed bottom-0 border-top border-dark">
        <div class="container">
            2024 - LangApp<br />
            Autorstwa: Dawid Bazylewicz, Sara Fijołek, Miron Kwiatkowski
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>